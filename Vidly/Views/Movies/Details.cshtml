@model Vidly.Models.Movie
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre : @Model.Genre.GenreName</li>
    <li>ReleasedDate : @Model.ReleaseDate.ToString("dddd, MMMM d, yyyy")</li>
    <li>AddedDate : @Model.DateAddedToTheDB.ToString("dddd, MMMM d, yyyy")</li>
    <li>NumberInStock : @Model.NumberInStock</li>
</ul>

